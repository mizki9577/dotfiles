#!/usr/bin/bash
current=$(xbacklight -get)
case $1 in
	up)
		value=$(echo "scale=5; $current * 2" | bc)
		xbacklight -set $value
		;;
	down)
		value=$(echo "scale=5; if ($current > 4) $current / 2 else 2" | bc)
		xbacklight -set $value
		;;
	*)
		exit
		;;
esac
notify-send backlight "`xbacklight -get` %"
